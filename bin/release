#!/bin/bash
set -e

if [ "$1" == "" ]; then
  echo "ERROR: missed tag arg"
  exit -1
fi

if [ -n "$(git status --porcelain)" ]; then
  echo "ERROR: there are changes"
  exit -1
fi

set -x
git tag $1
git push
git push --tags
docker build --platform linux/amd64 -t avakhov/prometheus:$1 .
docker push avakhov/prometheus:$1
echo done.
